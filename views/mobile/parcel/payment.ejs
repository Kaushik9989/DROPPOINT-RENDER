<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<script>
  const payBtn = document.getElementById('payButton');

  const options = {
      key: "<%= razorpayKeyId %>",
      amount: "<%= amount %>",
      currency: "<%= currency %>",
      name: "Drop Point System",
      description: "Parcel Payment",
      order_id: "<%= orderId %>",
      handler: function (response) {
          window.location.href = "/mobile/payment/success?order_id=" + response.razorpay_order_id +
              "&payment_id=" + response.razorpay_payment_id +
              "&signature=" + response.razorpay_signature;
      },
      prefill: {
          name: "<%= parcel.senderName %>",
          email: "<%= parcel.senderEmail || '' %>"
      },
      theme: {
          color: "#4e54c8"
      },
      modal: {
          ondismiss: function () {
              // Re-enable button if user cancels Razorpay
              payBtn.disabled = false;
              payBtn.innerHTML = `<i class="bi bi-credit-card-fill me-2"></i> Pay Now`;
          }
      }
  };

  const rzp = new Razorpay(options);

  payBtn.onclick = function (e) {
      e.preventDefault();

      // Disable button & show spinner
      payBtn.disabled = true;
      payBtn.innerHTML = `
        <span class="spinner-border spinner-border-sm me-2"></span>
        Processing...
      `;

      // Open Razorpay checkout
      rzp.open();
  };
</script>

<script>
  window.addEventListener("load", () => {
    const loader = document.getElementById("customLoader");
    loader.style.opacity = "0";

    setTimeout(() => {
      loader.style.visibility = "hidden";
    }, 400); // match CSS transition
  });
</script>

