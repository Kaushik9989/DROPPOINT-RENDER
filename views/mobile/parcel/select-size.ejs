<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Select Locker Size</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script> <!-- Replace with your Font Awesome kit -->
  <style>
    body {
      background-color: #f9fafb;
    }

    .size-option {
      border: 2px solid #ccc;
      border-radius: 12px;
      padding: 25px 10px;
      text-align: center;
      cursor: pointer;
      transition: all 0.25s ease;
      background: #fff;
    }

    .size-option:hover {
      transform: translateY(-3px);
      border-color: #007bff;
      box-shadow: 0 4px 10px rgba(0, 123, 255, 0.15);
    }

    .size-option.selected {
      border-color: #007bff;
      box-shadow: 0 0 12px rgba(0, 123, 255, 0.3);
    }

    .size-radio {
      display: none;
    }

    .size-label {
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 10px;
    }

    .unavailable {
      opacity: 0.5;
      pointer-events: none;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <%- include('../../partials/navbar') %>

  <!-- Main Content -->
  <div class="container mt-4">
    <h4 class="fw-semibold mb-4 text-center">üì¶ Select a Locker Size</h4>
    <p class="text-muted text-center mb-4">
      Locker ID: <strong><%= locker.lockerId %></strong> <br>
      <small><%= locker.location?.address || '' %></small>
    </p>

    <% 
      // Count availability by size
      const sizeAvailability = { small: 0, medium: 0, large: 0 };
      availableCompartments.forEach(c => sizeAvailability[c.size] = (sizeAvailability[c.size] || 0) + 1);
    %>

    <form action="/mobile/send/select-locker/<%= locker.lockerId %>" method="POST">
      <div class="row g-3 text-center justify-content-center">

        <!-- Small -->
        <div class="col-6 col-md-4">
          <label class="size-option d-block <%= sizeAvailability.small === 0 ? 'unavailable' : '' %>" id="smallOption">
            <input class="size-radio" type="radio" name="size" value="small" <%= sizeAvailability.small === 0 ? 'disabled' : '' %>>
            <i class="fas fa-box-open text-primary fa-2x"></i>
            <div class="size-label">Small</div>
            <% if (sizeAvailability.small > 0) { %>
              <p class="text-success small mt-1"><%= sizeAvailability.small %> Available</p>
            <% } else { %>
              <p class="text-danger small mt-1">Not Available</p>
            <% } %>
          </label>
        </div>

        <!-- Medium -->
        <div class="col-6 col-md-4">
          <label class="size-option d-block <%= sizeAvailability.medium === 0 ? 'unavailable' : '' %>" id="mediumOption">
            <input class="size-radio" type="radio" name="size" value="medium" <%= sizeAvailability.medium === 0 ? 'disabled' : '' %>>
            <i class="fas fa-box text-warning fa-2x"></i>
            <div class="size-label">Medium</div>
            <% if (sizeAvailability.medium > 0) { %>
              <p class="text-success small mt-1"><%= sizeAvailability.medium %> Available</p>
            <% } else { %>
              <p class="text-danger small mt-1">Not Available</p>
            <% } %>
          </label>
        </div>

        <!-- Large -->
        <div class="col-6 col-md-4">
          <label class="size-option d-block <%= sizeAvailability.large === 0 ? 'unavailable' : '' %>" id="largeOption">
            <input class="size-radio" type="radio" name="size" value="large" <%= sizeAvailability.large === 0 ? 'disabled' : '' %>>
            <i class="fa-solid fa-boxes-stacked text-danger fa-2x"></i>
            <div class="size-label">Large</div>
            <% if (sizeAvailability.large > 0) { %>
              <p class="text-success small mt-1"><%= sizeAvailability.large %> Available</p>
            <% } else { %>
              <p class="text-danger small mt-1">Not Available</p>
            <% } %>
          </label>
        </div>

      </div>
              <div class="mb-4">
                                            <label class="form-label fw-semibold">
                                                ‚è± Storage Duration
                                                <span class="text-muted">(in hours)</span>
                                            </label>

                                            <div class="d-flex align-items-center gap-3">
                                                <input type="range" class="form-range" id="durationRange"
                                                    name="duration" min="0" max="10" value="1" />
                                                    
                                                <span class="badge bg-primary fs-6" id="durationValue">1 hr</span>
                                            </div>

                                            <small class="" style="color: rgb(233, 17, 17)">
                                               (Duration starts from the time of drop-off)
                                            </small>
                                        </div>

      <div class="text-center mt-4">
        <button type="submit" class="btn btn-success px-5">Continue</button>
      </div>
    </form>
  </div>

  <script>
    const sizeOptions = document.querySelectorAll('.size-option');
    sizeOptions.forEach(option => {
      option.addEventListener('click', () => {
        if (option.classList.contains('unavailable')) return;
        sizeOptions.forEach(o => o.classList.remove('selected'));
        option.classList.add('selected');
        option.querySelector('input').checked = true;
      });
    });
  </script>

      <script>
        const durationRange = document.getElementById("durationRange");
        const durationValue = document.getElementById("durationValue");

        if (durationRange) {
            durationRange.addEventListener("input", () => {
                const val = durationRange.value;
                durationValue.textContent = val + (val == 1 ? " hr" : " hrs");
            });
        }
    </script>

</body>
</html>
