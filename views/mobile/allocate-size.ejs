<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Select Compartment</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    :root {
      --card-radius: 18px;
    }

    html, body {
      height: 100%;
    }

    body {
      background: #f2f4f7;
      font-family: system-ui, -apple-system, BlinkMacSystemFont;
    }

    .page {
      padding: 16px;
      padding-bottom: 24px;
    }

    /* Header */
    .page-header {
      margin-bottom: 20px;
    }

    .page-header h4 {
      font-weight: 700;
      margin-bottom: 4px;
    }

    .locker-meta {
      font-size: 14px;
      color: #6c757d;
      line-height: 1.4;
    }

    /* Compartment card */
    .compartment-card {
      border-radius: var(--card-radius);
      background: #ffffff;
      border: none;
      padding: 18px;
      width: 100%;
      text-align: left;
      box-shadow: 0 8px 20px rgba(0,0,0,0.06);
      transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .compartment-card:active {
      transform: scale(0.98);
    }

    .compartment-title {
      font-size: 16px;
      font-weight: 600;
    }

    .compartment-sub {
      font-size: 13px;
      color: #6c757d;
      margin-top: 2px;
    }

    .badge-available {
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
    }

    /* Empty state */
    .empty-card {
      background: #fff;
      border-radius: var(--card-radius);
      padding: 20px;
      text-align: center;
      box-shadow: 0 6px 16px rgba(0,0,0,0.06);
    }

    /* Bottom button */
    .bottom-action {
      margin-top: 24px;
    }

    .btn-lg-mobile {
      padding: 14px;
      font-size: 16px;
      border-radius: 14px;
    }
  </style>
</head>
<body>
          <%- include('../partials/navbar') %>
<div class="page">

  <!-- Header -->
  <div class="page-header">
    <h4 class="mb-4">Select Compartment : </h4>
    <div class="locker-meta">
      Locker ID: <strong><%= locker.lockerId %></strong><br />
      <% if (locker.location) { %>
        <%= locker.location.address %>
      <% } %>
    </div>
  </div>

  <% if (!availableCompartments || availableCompartments.length === 0) { %>

    <!-- Empty State -->
    <div class="empty-card mb-3">
      <p class="mb-3 fw-semibold">
        No compartments available right now
      </p>
      <p class="text-muted small mb-0">
        Please try another locker or come back later.
      </p>
    </div>

    <a href="/mobile/allocate" class="btn btn-secondary btn-lg-mobile w-100">
      Go Back
    </a>

  <% } else { %>

    <!-- Compartment List -->
    <div class="d-grid gap-3">
      <% availableCompartments.forEach((compartment) => { %>

        <form method="POST" action="/mobile/allocate/confirm">
          <input type="hidden" name="lockerId" value="<%= locker.lockerId %>" />
          <input type="hidden" name="compartmentId" value="<%= compartment.compartmentId %>" />

          <button type="submit" class="compartment-card">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <div class="compartment-title">
                  Compartment <%= parseInt(compartment.compartmentId) + 1 %>
                </div>

                <% if (compartment.size) { %>
                  <div class="compartment-sub">
                    Size: <%= compartment.size %>
                  </div>
                <% } %>
              </div>

              <span class="badge bg-success badge-available">
                Available
              </span>
            </div>
          </button>
        </form>

      <% }) %>
    </div>

    <!-- Back -->
    <div class="bottom-action">
      <a href="/mobile/allocate" class="btn btn-outline-secondary btn-lg-mobile w-100">
        Back to Lockers
      </a>
    </div>

  <% } %>

</div>

</body>
</html>
