<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Payment | LogisticsApp</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #10b981; /* Success Green for Payment */
            --primary-hover: #059669;
            --bg: #f3f4f6;
            --text: #1f2937;
            --text-light: #6b7280;
            --radius: 16px;
            --white: #ffffff;
        }

        * { box-sizing: border-box; }

        body {
            background-color: var(--bg);
            font-family: 'Inter', sans-serif;
            color: var(--text);
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .payment-card {
            background: var(--white);
            max-width: 400px;
            width: 100%;
            border-radius: var(--radius);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            overflow: hidden;
            border: 1px solid #e5e7eb;
        }

        .payment-header {
            background: #f9fafb;
            padding: 32px 24px;
            text-align: center;
            border-bottom: 1px dashed #d1d5db;
            position: relative;
        }

        /* Decorative "punched holes" for receipt look */
        .payment-header::before, .payment-header::after {
            content: "";
            position: absolute;
            bottom: -10px;
            width: 20px;
            height: 20px;
            background: var(--bg);
            border-radius: 50%;
        }
        .payment-header::before { left: -10px; }
        .payment-header::after { right: -10px; }

        .icon-circle {
            width: 60px;
            height: 60px;
            background: #ecfdf5;
            color: var(--primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 1.5rem;
        }

        .payment-header h4 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text);
        }

        .summary-body {
            padding: 32px 24px;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 16px;
            font-size: 0.95rem;
        }

        .detail-label {
            color: var(--text-light);
        }

        .detail-value {
            font-weight: 600;
            color: var(--text);
        }

        .total-row {
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid #f3f4f6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .total-label {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .total-amount {
            font-size: 1.75rem;
            font-weight: 800;
            color: var(--text);
        }

        .pay-btn {
            width: 100%;
            background-color: var(--primary);
            color: white;
            padding: 16px;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            margin-top: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .pay-btn:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.3);
        }

        .secure-note {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            margin-top: 16px;
            font-size: 0.8rem;
            color: var(--text-light);
        }
    </style>
</head>
<body>

<div class="payment-card">
    <div class="payment-header">
        <div class="icon-circle">ðŸ’³</div>
        <h4>Payment Summary</h4>
        <p style="font-size: 0.85rem; color: var(--text-light); margin: 4px 0 0;">Transaction ID: #<%= parcel._id.toString().slice(-8).toUpperCase() %></p>
    </div>

    <div class="summary-body">
        <div class="detail-row">
            <span class="detail-label">Service Provider</span>
            <span class="detail-value"><%= parcel.shiprocketQuote.courier_name %></span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Destination Pincode</span>
            <span class="detail-value"><%= parcel.delivery_pincode %></span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Platform Fee</span>
            <span class="detail-value">â‚¹0.00</span>
        </div>

        <div class="total-row">
            <span class="total-label">Total Amount</span>
            <span class="total-amount">â‚¹<%= parcel.shiprocketQuote.estimated_cost %></span>
        </div>

       
            <button type="submit" class="pay-btn">
                Pay Now
            </button>
      

        <div class="secure-note">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
            Secure SSL Encrypted Payment
        </div>
    </div>
</div>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<script>
  const payBtn = document.querySelector(".pay-btn");

  payBtn.addEventListener("click", async function (e) {
    e.preventDefault();

    const res = await fetch("/api/razorpay/order", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        parcelId: "<%= parcel._id %>"
      })
    });

    const data = await res.json();

    const options = {
      key: data.key,
      amount: data.amount,
      currency: "INR",
      name: "LogisticsApp",
      description: "Parcel Delivery Payment",
      order_id: data.orderId,

      handler: function (response) {
        const form = document.createElement("form");
        form.method = "POST";
        form.action = "/api/razorpay/verify";

        const fields = {
          razorpay_payment_id: response.razorpay_payment_id,
          razorpay_order_id: response.razorpay_order_id,
          razorpay_signature: response.razorpay_signature,
          parcelId: "<%= parcel._id %>"
        };

        for (let key in fields) {
          const input = document.createElement("input");
          input.type = "hidden";
          input.name = key;
          input.value = fields[key];
          form.appendChild(input);
        }

        document.body.appendChild(form);
        form.submit();
      },

      prefill: {
        name: "<%= parcel.senderName || '' %>",
        contact: "<%= parcel.senderPhone || '' %>"
      },

      theme: {
        color: "#10b981"
      }
    };

    const rzp = new Razorpay(options);
    rzp.open();
  });
</script>

</body>
</html>