<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Drop Parcel into <%= locker.lockerId %> / <%= compartment.compartmentId %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    /* ===== Mobile-first base ===== */
    :root{
      --bg:#f8f9fa;
      --card-bg:#ffffff;
      --muted:#6c757d;
      --primary:#0d6efd;
      --success:#198754;
      --radius:12px;
      --shadow: 0 6px 18px rgba(0,0,0,0.06);
      --glass: rgba(255,255,255,0.6);
      --container-padding:16px;
    }

    html,body{
      height:100%;
      margin:0;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: linear-gradient(180deg, var(--bg) 0%, #eef2f5 100%);
      color:#222;
      -webkit-font-smoothing:antialiased;
    }

    /* container is full width on mobile with comfortable padding */
    .container {
      max-width: 100%;
      padding: var(--container-padding);
      margin: 8px auto;
    }

    /* Card basics */
    .card {
      background: var(--card-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 14px;
      margin-bottom: 12px;
      transition: transform .18s ease, box-shadow .18s ease;
    }

    .card:focus-within,
    .card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    /* Headings & text */
    h4, h5 { margin: 0 0 8px 0; font-weight:700; color:#111; line-height:1.15; }
    p { margin: 6px 0; color:var(--muted); font-size:0.95rem; }

    /* Size badge */
    .size-tag {
      display:inline-block;
      padding:4px 10px;
      border-radius:999px;
      font-weight:700;
      font-size:0.85rem;
      background:var(--primary);
      color:#fff;
      vertical-align:middle;
    }

    /* Parcel item list - stacked on mobile */
    .list-group {
      display:flex;
      flex-direction:column;
      gap:8px;
    }

    .list-group-item {
      display:flex;
      flex-direction:column;
      gap:8px;
      align-items:stretch;
      border:1px solid #eef1f4;
      padding:10px;
      border-radius:10px;
      background:linear-gradient(180deg, rgba(255,255,255,0.6), rgba(255,255,255,0.4));
    }

    .item-top {
      display:flex;
      justify-content:space-between;
      gap:12px;
      align-items:flex-start;
      flex-wrap:wrap;
    }

    .item-meta { font-size:0.92rem; color:#333; }
    .item-meta div { margin-bottom:4px; }

    .small {
      display:inline-block;
      font-size:0.82rem;
      padding:3px 8px;
      border-radius:8px;
      background:#f1f3f5;
      color:#333;
      font-weight:600;
    }

    .text-muted.small { font-size:0.78rem; color:var(--muted); }

    /* Buttons full width on mobile */
    .item-actions {
      width:100%;
      display:flex;
      gap:8px;
      justify-content:stretch;
    }

    .item-actions form,
    .item-actions button {
      flex:1 1 auto;
    }

    .btn {
      border-radius:10px;
      padding:10px 12px;
      font-weight:700;
    }

    .btn-success { background:var(--success); border-color:var(--success); color:#fff; }
    .btn-outline-primary { border-radius:10px; padding:9px 12px; font-weight:700; }

    .disabled-row {
      opacity:0.5;
      pointer-events:none;
      background:#fbfbfb;
    }

    /* Footer small note */
    .note { font-size:0.9rem; color:var(--muted); margin-top:8px; }

    /* ===== Larger screens: upgrade layout ===== */
    @media (min-width: 576px) {
      .container { max-width: 540px; padding:18px; }
      .card { padding:18px; }
      .list-group-item { flex-direction:row; align-items:center; padding:14px; }
      .item-top { flex:1 1 auto; }
      .item-meta { font-size:0.95rem; }
      .item-actions { width:auto; flex-direction:column; align-items:flex-end; gap:10px; justify-content:center; }
      .item-actions form, .item-actions button { width:auto; min-width:160px; }
    }

    @media (min-width: 768px) {
      .container { max-width: 720px; }
      .card { border-radius:14px; --radius:14px; }
    }

    @media (min-width: 992px) {
      .container { max-width:900px; }
      .list-group-item { padding:16px 18px; }
    }

  </style>
</head>
<body>
  <%- include('./partials/navbar') %>

  <div class="container">
    <div class="card">
      <h4>
        Drop parcel into Locker
        <strong><%= locker.lockerId %></strong>
        â€” Compartment <strong><%= parseInt(compartment.compartmentId) + 1 %></strong>
      </h4>
      <p>Compartment size: <span class="size-tag"><%= compartment.size !== undefined ? compartment.size : "unknown" %></span></p>
    </div>

    <div class="card">
      <h5>Your parcels</h5>

      <% if (!parcels || parcels.length === 0) { %>
        <p class="note">No parcels available for drop.</p>
      <% } else { %>
        <div class="list-group mt-2">
          <% parcels.forEach(function(p) { 
               let compSize = compartment.size;
               let parcelSize = p.size;
               let sizeOk = true;
               if (compSize !== undefined && parcelSize !== undefined) {
                 if (!isNaN(Number(compSize)) && !isNaN(Number(parcelSize))) {
                   sizeOk = Number(parcelSize) <= Number(compSize);
                 } else {
                   sizeOk = String(compSize).toLowerCase() === String(parcelSize).toLowerCase();
                 }
               }
          %>
            <div class="list-group-item <%= sizeOk ? '' : 'disabled-row' %>">
              <div class="item-top">
                <div class="item-meta">
                  <div><strong>Parcel ID:</strong> <%= p.customId %></div>
                  <div><strong>Sender:</strong> <%= p.receiverName %></div>
                  <div><strong>Status:</strong> <%= p.status %></div>
                  <div><strong>Size:</strong> <span class="small"><%= p.size !== undefined ? p.size : 'unknown' %></span></div>
                  <div class="text-muted small">Created: <%= p.createdAt ? p.createdAt.toLocaleString() : '-' %></div>
                   <div class="text-muted small">Expires: <%= p.createdAt ? p.expiresAt.toLocaleString() : '-' %></div>
                </div>
                <div class="item-actions">
                  <% if (sizeOk) { %>
                    <form method="POST" action="/unlock/<%= locker.lockerId %>/<%= compartment.compartmentId %>/drop">
                      <input type="hidden" name="parcelId" value="<%= p._id %>" />
                      <button type="submit" class="btn btn-success">Drop this parcel</button>
                    </form>
                  <% } else { %>
                    <button class="btn btn-secondary" disabled>Doesn't fit</button>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <div class="mt-3 d-flex gap-2 flex-column flex-sm-row">
        <a href="/mobile/send/step2?size=<%=compartment.size%>" class="btn btn-outline-primary">Book a parcel</a>
      </div>

      <p class="note">or try booking from the locker terminal</p>
    </div>
  </div>
</body>
</html>
