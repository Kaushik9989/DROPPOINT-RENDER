<a href="/mobile/parcel/<%= parcel.customId %>" style="text-decoration: none; color: black;">
  <div class="card mb-3 parcel-card border-0 shadow-sm" data-status="<%= parcel.status %>" style="border-radius: 12px;">
    <div class="card-body p-3">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <p class="fw-semibold mb-1 fs-6">From: <%= parcel.senderName %></p>
          <p class="text-muted mb-2" style="font-size: 0.9rem;"><%= parcel.description || "No description" %></p>
        </div>
        <span class="badge status-badge <%= parcel.status === 'picked' ? 'bg-success' : parcel.status === 'awaiting_drop' ? 'bg-warning' : parcel.status === 'awaiting_pick' ? 'bg-danger' : 'bg-danger' %> px-3 py-1">
          <%= parcel.status.charAt(0).toUpperCase() + parcel.status.slice(1).replace(/_/g, " ") %>
        </span>
      </div>

      <p class="mb-2" style="font-size: 0.9rem;">
        <span class="me-2">ğŸ“¦ <%= parcel.type %></span>
        â€¢ <%= parcel.size %>
        â€¢ â‚¹<%= parseFloat(parcel.cost).toFixed(0) %>
      </p>

      <p class="mb-1" style="font-size: 0.9rem;">
        Locker: <strong><%= parcel.lockerId || 'N/A' %></strong> |
        Compartment: <strong><%= parcel.UsercompartmentId || 'N/A' %></strong>
      </p>

      <% 
        // Format expiry date to readable form (IST)
        const expiryDate = new Date(parcel.expiresAt);
        const formattedExpiry = expiryDate.toLocaleString("en-IN", {
          timeZone: "Asia/Kolkata",
          weekday: "long",   // e.g. "Friday"
          year: "numeric",
          month: "long",     // e.g. "October"
          day: "numeric",
          hour: "2-digit",
          minute: "2-digit"
        });
      %>

      <p class="mb-1 text-muted" style="font-size: 0.85rem;">
        Expires: <%= formattedExpiry %>
      </p>

      <p class="mb-0" style="font-size: 0.9rem;">
        Access Code: <strong><%= parcel.accessCode %></strong>
      </p>

<div class="text-end mt-3 d-flex justify-content-end gap-2">
  <% if(parcel.status ==='awaiting_pick') {%>
  <a href="/mobile/parcel/<%= parcel.customId %>/desk-delivery" 
     class="btn btn-sm btn-outline-dark"
     style="border-radius: 8px; padding: 0.4rem 1rem;">
    ğŸ§‘â€ğŸ’¼ Desk Delivery
  </a>
    <% } %>
  <a href="/mobile/parcel/<%= parcel.customId %>" 
     class="btn btn-sm btn-outline-primary"
     style="border-radius: 8px; padding: 0.4rem 1rem;">
    Details
  </a>

  <% if (
  parcel.status === 'awaiting_pick' &&
  (new Date(parcel.expiresAt) < new Date())
) { %>
    <a href="/parcel/<%= parcel.customId %>/extend"
       class="btn btn-sm btn-outline-warning"
       style="border-radius: 8px; padding: 0.4rem 1rem;">
      â± Extend
    </a>
    

    <a href="/mobile/incoming/<%= parcel.customId %>/qr"
       class="btn btn-sm btn-outline-success"
       style="border-radius: 8px; padding: 0.4rem 1rem;">
      QR Code
    </a>

  <% } else if (parcel.status === 'awaiting_payment' && parcel.razorpayPaymentLink) { %>
    <a href="<%= parcel.razorpayPaymentLink %>"
       target="_blank"
       class="btn btn-sm btn-warning text-white"
       style="border-radius: 8px; padding: 0.4rem 1rem;">
      ğŸ’³ Pay Now
    </a>
  <% } %>
</div>

    </div>
  </div>
</a>
