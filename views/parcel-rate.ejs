<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select Courier | LogisticsApp</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #4f46e5;
      --primary-hover: #4338ca;
      --bg: #f9fafb;
      --text: #1f2937;
      --text-light: #6b7280;
      --border: #e5e7eb;
      --radius: 12px;
      --white: #ffffff;
    }

    * { box-sizing: border-box; }

    body {
      background-color: var(--bg);
      font-family: 'Inter', sans-serif;
      color: var(--text);
      margin: 0;
      padding: 40px 16px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
    }

    .header {
      text-align: center;
      margin-bottom: 24px;
    }

    .header h4 {
      font-size: 1.75rem;
      margin-bottom: 6px;
      font-weight: 600;
    }

    .pincode-badge {
      background: #e0e7ff;
      color: var(--primary);
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 500;
    }

    /* SORT BUTTONS */
    .sort-toggle {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
    }

    .sort-btn {
      flex: 1;
      padding: 12px;
      border-radius: 10px;
      border: 2px solid var(--border);
      background: white;
      font-weight: 600;
      cursor: pointer;
      transition: 0.2s;
    }

    .sort-btn.active {
      border-color: var(--primary);
      background: #eef2ff;
      color: var(--primary);
    }

    .courier-list {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-bottom: 24px;
    }

    .courier-card {
      background: var(--white);
      border: 2px solid var(--border);
      border-radius: var(--radius);
      padding: 20px;
      display: grid;
      grid-template-columns: 40px 2fr 1fr 1fr 1fr;
      align-items: center;
      cursor: pointer;
      transition: all 0.2s ease;
      position: relative;
    }

    .courier-card:hover {
      border-color: #c7d2fe;
      background-color: #fcfdff;
    }

    .courier-card input[type="radio"] {
      width: 20px;
      height: 20px;
      accent-color: var(--primary);
    }

    .courier-card:has(input:checked) {
      border-color: var(--primary);
      background-color: #f5f3ff;
      box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.1);
    }

    .label-sm {
      font-size: 0.75rem;
      color: var(--text-light);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .courier-name { font-weight: 600; }
    .courier-rate {
      font-weight: 700;
      color: var(--primary);
      font-size: 1.1rem;
    }

    .best-badge {
      position: absolute;
      top: 12px;
      right: 12px;
      background: #ecfdf5;
      color: #059669;
      font-size: 0.7rem;
      font-weight: 600;
      padding: 4px 8px;
      border-radius: 6px;
    }

    .info-box {
      background: #eff6ff;
      border-left: 4px solid #3b82f6;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 32px;
      font-size: 0.9rem;
    }

    .submit-btn {
      width: 100%;
      background-color: var(--primary);
      color: white;
      padding: 18px;
      border: none;
      border-radius: var(--radius);
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
    }

    .submit-btn:hover {
      background-color: var(--primary-hover);
      transform: translateY(-2px);
    }

    @media (max-width: 768px) {
      .courier-card {
        grid-template-columns: 40px 1fr 1fr;
        gap: 14px;
      }
      .hide-mobile { display: none; }
      .courier-rate { grid-column: 3; text-align: right; }
    }
  </style>
</head>

<body>

<div class="container">
  <div class="header">
    <h4>Choose Courier Service</h4>
    <p>Delivery to <span class="pincode-badge"><%= parcel.delivery_pincode %></span></p>
  </div>

  <form method="POST" action="/parcel/select-courier/<%= parcel._id %>">

    <!-- SORT TOGGLE -->
    <div class="sort-toggle">
      <button type="button" class="sort-btn active" onclick="sortCouriers('cheapest', this)">
        Cheapest
      </button>
      <button type="button" class="sort-btn" onclick="sortCouriers('fastest', this)">
        Fastest
      </button>
    </div>

    <!-- COURIER LIST -->
    <div class="courier-list" id="courierList">
      <% couriers.forEach(courier => { 
        const etdMatch = courier.etd && courier.etd.match(/\d+/);
        const etdDays = etdMatch ? etdMatch[0] : 999;
        const pickupText = new Date().getHours() < 14
          ? "Today (before 6 PM)"
          : "Next business day";
      %>

      <label class="courier-card"
        data-rate="<%= courier.rate %>"
        data-etd="<%= etdDays %>">

        <input type="radio" name="courier_code"
          value="<%= courier.courier_company_id %>" required>

        <div>
          <span class="label-sm">Provider</span>
          <div class="courier-name"><%= courier.courier_name %></div>
          <div class="hide-mobile" style="font-size:0.8rem;color:#6b7280">
            Rating: <%= courier.rating || "4.2" %>
          </div>
        </div>

        <div class="hide-mobile">
          <span class="label-sm">Pickup</span>
          <div><%= pickupText %></div>
        </div>

        <div>
          <span class="label-sm">ETD</span>
          <div><%= courier.etd || "2–5 days" %></div>
        </div>

        <div class="courier-rate">
          ₹<%= courier.rate %>
        </div>

      </label>
      <% }) %>
    </div>

    <div class="info-box">
      <strong>Delivery Time Guide</strong>
      <ul>
        <li><strong>ETD:</strong> Estimated delivery time after pickup.</li>
        <li><strong>Pickup:</strong> Couriers usually collect between 2 PM and 6 PM.</li>
      </ul>
    </div>

    <button type="submit" class="submit-btn">
      Continue with Selected Courier
    </button>

  </form>
</div>

<script>
  function sortCouriers(type, btn) {
    const list = document.getElementById("courierList");
    const cards = Array.from(list.children);
    const selected = document.querySelector('input[name="courier_code"]:checked')?.value;

    cards.sort((a, b) => {
      const rateA = Number(a.dataset.rate);
      const rateB = Number(b.dataset.rate);
      const etdA = Number(a.dataset.etd);
      const etdB = Number(b.dataset.etd);

      if (type === "cheapest") {
        return rateA !== rateB ? rateA - rateB : etdA - etdB;
      } else {
        return etdA !== etdB ? etdA - etdB : rateA - rateB;
      }
    });

    cards.forEach(card => list.appendChild(card));

    if (selected) {
      const radio = document.querySelector(`input[value="${selected}"]`);
      if (radio) radio.checked = true;
    }

    document.querySelectorAll(".sort-btn").forEach(b => b.classList.remove("active"));
    btn.classList.add("active");
  }

  // Make whole card clickable
  document.querySelectorAll('.courier-card').forEach(card => {
    card.addEventListener('click', () => {
      card.querySelector('input').checked = true;
    });
  });

  // Default sort
  sortCouriers("cheapest", document.querySelector(".sort-btn"));
</script>

</body>
</html>
